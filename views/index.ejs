<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>database usernames</title>
  </head>
  <body>
    <h1>Database usernames</h1>
    <a href="/new">Add a user</a>
    <br />
    <form action="/search" method="GET">
      <label for="q">Search username: </label>
      <input type="text" id="q" name="q" />
      <button type="submit">Search</button>
    </form>
    <ul>
      <% if (locals.users) {%> <% users.forEach(user => { %>
      <li>ID: <%= user.id %>, Name: <%= user.username %></li>
      <%}); %> <%} %>
    </ul>
    <a href="/delete">Delete all users</a>
  </body>
</html>
